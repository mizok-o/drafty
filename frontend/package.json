{
  "name": "drafty-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "15"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@biomejs/biome": "^1.9.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "biome check --write"
    ],
    "**/*.{json,jsonc}": [
      "biome format --write"
    ]
  }
}